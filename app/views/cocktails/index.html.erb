<div class="container">
  <br>
  <br>
  <h1>Welcome </h1>

    <div class="cards">
      <% @cocktails.each do |cocktail| %>
       <div class="card">
              <div class="card-body">
                <h5 class="card-title"><%= link_to(cocktail.name, cocktail_path(cocktail)) %></h5>
                <p class="card-text"></p>
                <div class="card-footer">
                 <%= link_to "More", cocktail_path(cocktail.id), class: "btn btn-primary" %>
                </div>
              </div>
            </div>
          <% end %>
        </div>
      <br>
  <%= link_to("Add a new cocktail", new_cocktail_path) %>
</div>


